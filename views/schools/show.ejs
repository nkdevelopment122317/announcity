<% include ../partials/header %>

<h1>SHOW SCHOOL</h1>

<p><%= school.name %></p>
<p><%= school.location %></p>
<p><%= school.code %></p>

<% if (currentUser && school.author.id.equals(currentUser._id)) { %>
    <a href="/schools/<%= school._id %>/edit">Edit</a>
    <form action="/schools/<%= school._id %>?_method=DELETE" method="POST">
        <input type="submit" value="Delete">
    </form>
<% } %>

<% include ../partials/footer %>