<% include ./partials/header %>

<style>
    body {
        background: #145fe2;
    }
</style>

<form class="form" action="/register" method="POST">
    <div class="form-container">
        <legend id="form-title">Register</legend>

        <fieldset class="field">
            <legend class="role-legend">Basic Info</legend>
            <div class="group">
                <input class="material-input" name="firstName" type="text" required>
                <span class="highlight"></span>
                <span class="bar"></span>
                <label class="material-label">First Name</label>
            </div>

            <div class="group">
                <input class="material-input" name="lastName" type="text" required>
                <span class="highlight"></span>
                <span class="bar"></span>
                <label class="material-label">Last Name</label>
            </div>

            <div class="group">
                <input class="material-input" name="username" type="text" required>
                <span class="highlight"></span>
                <span class="bar"></span>
                <label class="material-label">Username</label>
            </div>

            <div class="group">
                <input class="material-input" name="password" type="password" required>
                <span class="highlight"></span>
                <span class="bar"></span>
                <label class="material-label">Password</label>
            </div>

            <div class="group">
                <input class="material-input" name="email" type="text" required>
                <span class="highlight"></span>
                <span class="bar"></span>
                <label class="material-label">Email Address</label>
            </div>
        </fieldset>

        <fieldset class="field">
            <legend class="role-legend">I am</legend>
            <div class="role-container">
              <input class="role-input" type="radio" id="roleChoice1" name="role" value="student">
              <label class="role-label" for="roleChoice1">A Student</label>

              <input class="role-input" type="radio" id="roleChoice2" name="role" value="faculty">
              <label class="role-label" for="roleChoice2">A Faculty Member</label>

              <input class="role-input" type="radio" id="roleChoice3" name="role" value="administrator">
              <label class="role-label" for="roleChoice3">An Administrator</label>
            </div>

            <div id="hidden-textbox" class="group">
                <input class="material-input" name="code" type="text" required>
                <span class="highlight"></span>
                <span class="bar"></span>
                <label id="code-label" class="material-label">Please select an option above.</label>
            </div>
        </fieldset>

        <button class="material-button submit" type="submit">Register</button>
    </div>
</form>

<script type="text/javascript" src="/js/register.js"></script>

<% include ./partials/footer %>