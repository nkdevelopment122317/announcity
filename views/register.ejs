<% include ./partials/header %>

<style>
    body {
        background: #145fe2;
    }
</style>

<form class="form" action="/register" method="POST">
    <div class="form-container">
        <legend id="form-title">Register</legend>

        <fieldset class="field">
            <div class="group">
                <input class="material-input" name="firstName" type="text" required>
                <span class="highlight"></span>
                <span class="bar"></span>
                <label class="material-label">First Name</label>
            </div>

            <div class="group">
                <input class="material-input" name="lastName" type="text" required>
                <span class="highlight"></span>
                <span class="bar"></span>
                <label class="material-label">Last Name</label>
            </div>

            <div class="group">
                <input class="material-input" name="username" type="text" required>
                <span class="highlight"></span>
                <span class="bar"></span>
                <label class="material-label">Username</label>
            </div>

            <div class="group">
                <input class="material-input" name="password" type="password" required>
                <span class="highlight"></span>
                <span class="bar"></span>
                <label class="material-label">Password</label>
            </div>

            <div class="group">
                <input class="material-input" name="email" type="text" required>
                <span class="highlight"></span>
                <span class="bar"></span>
                <label class="material-label">Email Address</label>
            </div>

            <hr>

            <p>Please provide the name of your school and the state that it is in.</p>

            <div class="search-field-container">
                <div class="group">
                    <input class="material-input" name="email" type="text" required>
                    <span class="highlight"></span>
                    <span class="bar"></span>
                    <label class="material-label">School Name</label>
                </div>
                <div class="btn-group state-dropdown">
                    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        State <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu">
                        <li><a href="#">Action</a></li>
                        <li><a href="#">Another action</a></li>
                        <li><a href="#">Something else here</a></li>
                    </ul>
                </div>
            </div>

        </fieldset>

        <button class="material-button submit" type="submit">Register</button>
    </div>
</form>

<script type="text/javascript" src="/js/register.js"></script>

<% include ./partials/footer %>