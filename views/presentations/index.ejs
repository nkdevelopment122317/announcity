<% include ../partials/header %>


<h1 class="page-header-main">Presentations</h1>

<a class="btn btn-primary new-button" href="/schools/<%= currentUser.school %>/presentations/new"><i class="fas fa-plus"></i> New Presentation</a>

<div class="row">
    <% presentations.forEach(function(presentation) { %>
        <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
            <div class="thumbnail">
                <img class="cluborg-image" src="<%= presentation.image %>">
                <div class="caption">
                    <a href="/schools/<%= currentUser.school %>/presentations/<%= presentation._id %>"><h3 class="cluborg-name"><%= presentation.name %></h3></a>

                    <p><%= presentation.description %></p>

                    <!-- <a href="/schools/<%= currentUser.school %>/presentations/<%= presentation._id %>" class="more-info">More Info</a> -->
                    <div class="thumbnail-button-group">
                        <a href="#" class="btn btn-default" role="button"><i class="fas fa-play"></i></a> <a href="#" class="btn btn-default" role="button"><i class="fas fa-edit"></i></a> <a href="#" class="btn btn-default" role="button"><i class="fas fa-trash-alt"></i></a> <a href="#" class="btn btn-default" role="button"><i class="fas fa-info-circle"></i></a>
                    </div>

                </div>
                <p>
                </p>
            </div>
        </div>
    <% }); %>
</div>

<% include ../partials/footer %>