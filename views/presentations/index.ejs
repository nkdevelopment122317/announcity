<% include ../partials/header %>


<h1 class="page-header-main">Presentations</h1>

<a class="btn btn-primary new-button" href="/schools/<%= currentUser.school %>/presentations/new"><i class="fas fa-plus"></i> New Presentation</a>

<div class="row">
    <% presentations.forEach(function(presentation) { %>
        <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
            <div class="thumbnail">
                <img class="cluborg-image" src="<%= presentation.image %>">
                <div class="caption">
                    <div class="caption-top">
                        <h3 class="cluborg-name"><%= presentation.name %></h3>
                        <% if (presentation.favorite) { %>
                            <i class="favorite favorited fas fa-star" data-pres-id="<%= presentation._id %>"></i>
                        <% } else { %>
                            <i class="favorite far fa-star" data-pres-id="<%= presentation._id %>"></i>
                        <% } %>
                    </div>

                    <p class="pres-description"><%= presentation.description %></p>

                    <!-- <a href="/schools/<%= currentUser.school %>/presentations/<%= presentation._id %>" class="more-info">More Info</a> -->
                    <div class="thumbnail-button-group">
                        <a href="/schools/<%= currentUser.school %>/presentations/<%= presentation._id %>/play" target="_blank" class="btn btn-default" role="button"><i class="fas fa-play"></i></a> <!-- <a href="/schools/<%= currentUser.school %>/presentations/<%= presentation._id %>" class="btn btn-default" role="button"><i class="fas fa-info-circle"></i></a> --> <a href="/schools/<%= currentUser.school %>/presentations/<%= presentation._id %>/edit" class="btn btn-default" role="button"><i class="fas fa-edit"></i></a> <form class="delete-icon" action="/schools/<%= currentUser.school %>/presentations/<%= presentation._id %>?_method=DELETE" method="POST"> <button type="submit" class="btn btn-default" role="button"><i class="fas fa-trash-alt"></i></button></form>
                    </div>

                </div>
                <p>
                </p>
            </div>
        </div>
    <% }); %>
</div>

<script src="/js/presIndex.js"></script>

<% include ../partials/footer %>